                @Html.EditorFor(model => model.days_of_movement, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.days_of_movement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
