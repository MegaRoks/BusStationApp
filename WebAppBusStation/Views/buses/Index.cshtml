@model IEnumerable<WebAppBusStation.Models.bus>

@{
    ViewBag.Title = "Атобусы";
}

<h2>Атобусы</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Бортовой номер")
        </th>
        <th>
            @Html.DisplayName("Регистрационный номер")
        </th>
        <th>
            @Html.DisplayName("Число мест")
        </th>
        <th>
            @Html.DisplayName("Марка")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.board_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.regist_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number_of_places)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            <span> @Html.ActionLink("Изменить", "Edit", new { id = item.ID_bus })</span>
            <span> @Html.ActionLink("Удалить", "Delete", new { id = item.ID_bus })</span>
        </td>
    </tr>
}

</table>
